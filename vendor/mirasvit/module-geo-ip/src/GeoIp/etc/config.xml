<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <geo_ip>
            <general>
                <is_enabled>1</is_enabled>
                <popup_type>none</popup_type>
                <popup_text>You will be redirected to another store based on your location</popup_text>
            </general>
            <limitations>
                <ignored_ip>127.0.0.1</ignored_ip>
                <ignored_agent>googlebot,bingbot</ignored_agent>
                <process_first_visit>1</process_first_visit>
            </limitations>
        </geo_ip>
    </default>
</config>